    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "dev": "npx nodemon --exec \"node --experimental-specifier-resolution=node --loader ts-node/esm -r dotenv/config\" src/index.ts dotenv_config_path=.env.development",
